{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",                    
    "lib": [ "es5", "es6", "es7",
      "es2015", "es2016",
      "es2017", "es2018",
      "esnext" ],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "Node"
  }
}